/* pages/me_wallet_withdraw/me_wallet_withdraw.wxss */

.allpage {
  position: absolute;
  height: 100%;
  width: 100%;
  padding: 0;
  margin: 0;
  line-height: 40rpx;
  color: rgba(16, 16, 16, 1);
  font-size: 28rpx;
  font-family: Roboto;
  background-color: rgba(245, 245, 245, 1);
}

.inner {
  padding: 15rpx;
  padding-top: 20rpx;
}

.first_view {
  padding: 20rpx;
  background: white;
  height: 220rpx;
  line-height: 40rpx;
  border-radius: 10rpx;
  color: rgba(16, 16, 16, 1);
  font-size: 28rpx;
  font-family: Roboto;
}

.first_view_inner {
  padding: 10rpx;
  height: 60rpx;
}

.first_view_left {
  display: flex;
  align-items: center;
  position: relative;
  float: left;
  height: 46rpx;
  color: rgba(16, 16, 16, 1);
  font-size: 32rpx;
  font-family: Roboto;
}

.first_view_right {
  position: relative;
  float: right;
  width: 105rpx;
  height: 46rpx;
  line-height: 34rpx;
  color: rgba(136, 136, 136, 1);
  font-size: 26rpx;
  font-family: Roboto;
}

.money_out {
  padding: 10rpx;
}

.money {
  margin: 20rpx auto;
  height: 100rpx;
  border: 2rpx solid rgba(187, 187, 187, 1);
  border-radius: 10rpx;
  color: rgba(136, 136, 136, 1);
  font-size: 40rpx;
  font-family: Roboto;
  width: 80%;
}

.money_inner {
  padding-top: 26rpx;
  text-align: center;
}

.second_view {
  height: 240rpx;
  line-height: 40rpx;
  border-radius: 10rpx;
  background: white;
  color: rgba(16, 16, 16, 1);
  font-size: 14rpx;
  font-family: Roboto;
  margin-top: 15rpx;
  padding: 26rpx;
}

.account {
  height: 36rpx;
}

.account_inner_left {
  position: relative;
  float: left;
  height: 42rpx;
  color: rgba(16, 16, 16, 1);
  font-size: 32rpx;
  font-family: Roboto;
}

.account_inner_right {
  position: relative;
  float: right;
  height: 48rpx;
}

.head_photo {
  padding-top: 50rpx;
  /* padding: 30rpx; */
  margin: 0 auto;
  width: 260rpx;
  height: 200rpx;
}

.head_photo_left {
  display: flex;
  align-items: center;
  position: relative;
  float: left;
}

.head_photo_right {
  position: relative;
  float: right;
  color: rgba(16, 16, 16, 1);
  font-size: 36rpx;
  font-family: Roboto;
  padding-top: 36rpx;
}

.third_view {
  padding-top: 50rpx;
}

.button_withdraw {
  width: 678rpx;
  height: 100rpx;
  line-height: 100rpx;
  border-radius: 10rpx;
  background-color: rgba(255, 152, 0, 1);
  color: rgba(255, 255, 255, 1);
  font-size: 32rpx;
  font-family: Microsoft Yahei;
}

.fourth_view {
  margin-top: 15rpx;
  text-align: center;
}

.fourth_view_inner {
  height: 46rpx;
  line-height: 30rpx;
  color: rgba(136, 136, 136, 1);
  font-size: 20rpx;
  font-family: Roboto;
}

#icon_one {
  font-size: 50rpx;
  color: rgba(255, 152, 0, 1);
  padding-right: 15rpx;
}

#icon_two {
  font-size: 43rpx;
  color: rgba(45, 203, 112, 1);
  padding-right: 15rpx;
}

#icon_three {
  font-size: 42rpx;
  color: rgba(229, 229, 229, 1);
}

.avatar {
  margin: 10rpx;
  width: 104rpx;
  height: 104rpx;
  border-radius: 100rpx;
}
